<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         metadata-complete="true">

	<display-name>DataMagic</display-name>
	
	<listener>
		<listener-class>ca.datamagic.root.servlet.RootContextListener</listener-class>
	</listener>

	<filter>
		<filter-name>CORSFilter</filter-name>
		<filter-class>ca.datamagic.filter.CORSFilter</filter-class>
		<init-param>
			<param-name>allow.origins</param-name>
			<param-value>http://localhost:4200,http://localhost:8080,http://datamagic.ca,https://datamagic.ca</param-value>
		</init-param>
		<init-param>
			<param-name>allow.methods</param-name>
			<param-value>GET,POST,HEAD,OPTIONS,PUT,DELETE</param-value>
		</init-param>
		<init-param>
			<param-name>allow.headers</param-name>
			<param-value>Origin,Content-Type,Accept,Authorization,X-Request-With,location</param-value>
		</init-param>
		<init-param>
			<param-name>allow.credentials</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	
    <servlet>
        <servlet-name>SendError</servlet-name>
        <servlet-class>ca.datamagic.root.servlet.SendErrorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Contact</servlet-name>
        <servlet-class>ca.datamagic.root.servlet.ContactServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendMail</servlet-name>
        <servlet-class>ca.datamagic.root.servlet.SendMailServlet</servlet-class>
    </servlet>     
    <servlet>
        <servlet-name>OAuthCallback</servlet-name>
        <servlet-class>ca.datamagic.root.servlet.OAuthCallbackServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WhoAmI</servlet-name>
        <servlet-class>ca.datamagic.root.servlet.WhoAmIServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>ca.datamagic.root.servlet.LogoutServlet</servlet-class>
    </servlet>   
	<servlet>
        <servlet-name>SwaggerUI</servlet-name>
        <servlet-class>ca.datamagic.root.servlet.SwaggerUIServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerResources</servlet-name>
        <servlet-class>ca.datamagic.root.servlet.SwaggerResourcesServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerAPI</servlet-name>
        <servlet-class>ca.datamagic.root.servlet.SwaggerAPIServlet</servlet-class>
    </servlet>
    
    <filter-mapping>
		<filter-name>CORSFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
    <servlet-mapping>
        <servlet-name>SendError</servlet-name>
        <url-pattern>/api/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Contact</servlet-name>
        <url-pattern>/api/contact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendMail</servlet-name>
        <url-pattern>/api/mail</url-pattern>
    </servlet-mapping>    
    <servlet-mapping>
        <servlet-name>OAuthCallback</servlet-name>
        <url-pattern>/oauth/callback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WhoAmI</servlet-name>
        <url-pattern>/whoAmI</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerUI</servlet-name>
        <url-pattern>/swagger-resources/configuration/ui</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerResources</servlet-name>
        <url-pattern>/swagger-resources</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerAPI</servlet-name>
        <url-pattern>/v2/api-docs</url-pattern>
    </servlet-mapping>
    
    <error-page>
		<error-code>404</error-code>
		<location>/home/index.html</location>
	</error-page>
	
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>

